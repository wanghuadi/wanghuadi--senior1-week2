<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper   
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"   
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wanghuadi.mapper.GoodsMapper">

	<insert id="insertGoods" parameterType="com.wanghuadi.beans.Goods">
		insert into t_goods
		(id,name,price,sales)
		values
		(#{id},#{name},#{price},#{sales})
	</insert>
	
	<select id="queryAll" resultType="com.wanghuadi.beans.Goods" parameterType="map">
		select * from t_goods
		<where>
			<if test="startPrice != null and startPrice != ''">
				and price >=#{startPrice}
			</if>
			<if test="endPrice != null and endPrice != ''">
				and price &lt;= #{endPrice}
			</if>
			<if test="startSales != null and startSales != ''">
				and sales >=#{startSales}
			</if>
			<if test="endSales != null and endSales != ''">
				and sales &lt;= #{endSales}
			</if>
		</where>
		
		<if test="column != null and column != ''">
			order by ${column} ${orders}
		</if>
		
	</select>
	
</mapper>